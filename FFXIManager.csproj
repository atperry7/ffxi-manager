<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>ffxi-manager.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>

    <!-- Version Information -->
    <Version>1.3.1-beta</Version>
    <AssemblyVersion>1.3.1</AssemblyVersion>
    <FileVersion>1.3.1</FileVersion>

    <!-- Strong name signing -->
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>ffximanager.snk</AssemblyOriginatorKeyFile>
    <!-- Enable analyzers and set strict analysis level -->
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <!-- Optional: Do not fail the build yet; we'll fix warnings and can tighten later -->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SharpDX.DirectInput" Version="4.2.0" />
    <PackageReference Include="System.Management" Version="9.0.0" />
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="9.0.0" />
    <!-- Ensure Microsoft.CodeAnalysis.NetAnalyzers is available even outside SDK default -->
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="9.0.0" PrivateAssets="all" />
  </ItemGroup>

  <!-- Exclude test sources from main application build -->
  <ItemGroup>
    <Compile Remove="Testing\**\*.cs" />
    <None Remove="Testing\**\*" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="ffxi-manager.ico" />
  </ItemGroup>

</Project>
