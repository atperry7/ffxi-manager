<Window x:Class="FFXIManager.Views.SimpleApplicationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Application Config" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <Label Content="Application Name:" FontWeight="Bold"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
            
            <Label Content="Executable Path:" FontWeight="Bold"/>
            <TextBox Text="{Binding ExecutablePath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
            
            <Label Content="Description:" FontWeight="Bold"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
            
            <CheckBox Content="Allow Multiple Instances" 
                      IsChecked="{Binding AllowMultipleInstances}" Margin="0,5"/>
            
            <CheckBox Content="Enabled" 
                      IsChecked="{Binding IsEnabled}" Margin="0,5"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" IsDefault="True" Click="OK_Click" 
                    Margin="0,0,10,0" Padding="15,5" MinWidth="70"/>
            <Button Content="Cancel" IsCancel="True" Click="Cancel_Click" 
                    Padding="15,5" MinWidth="70"/>
        </StackPanel>
    </Grid>
</Window>