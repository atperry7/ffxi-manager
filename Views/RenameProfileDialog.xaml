<Window x:Class="FFXIManager.Views.RenameProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:FFXIManager.Converters"
        Title="Rename Profile" Height="230" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">
    <Window.Resources>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Current name row -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Current name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CurrentNameTextBlock" Text="{Binding CurrentName}" Margin="0,0,0,5" VerticalAlignment="Center" Style="{StaticResource SecondaryTextBlock}"/>

        <!-- New name row -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="New name:" FontWeight="Bold" Margin="0,0,10,5" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="NewNameTextBox" Text="{Binding NewProfileName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5" Height="28" FontSize="14" VerticalAlignment="Center"/>

        <!-- Status message -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding ButtonStatusMessage}" 
                   FontSize="11" TextWrapping="Wrap" Margin="0,5,0,0" Foreground="{DynamicResource PrimaryTextBrush}"/>

        <!-- Tip -->
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Text="Tip: This will convert auto-backups (backup_*) to user profiles" 
                   FontSize="11" TextWrapping="Wrap" Margin="0,5,0,0" Style="{StaticResource SecondaryTextBlock}"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource SecondaryButton}"
                    MinHeight="30"
                    Height="30"
                    Width="80" 
                    Margin="0,0,10,0" 
                    Command="{Binding CancelCommand}"/>
            <Button Content="Rename" 
                    Style="{StaticResource PrimaryButton}"
                    MinHeight="30"
                    Height="30"
                    Width="80" 
                    Command="{Binding ConfirmCommand}" 
                    IsDefault="True" 
                    ToolTip="Enter a new name for this profile"/>
        </StackPanel>
    </Grid>
</Window>