<Window x:Class="FFXIManager.Views.ApplicationConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application Configuration" Height="440" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Application Name -->
        <Label Grid.Row="0" Content="Application Name:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="NameTextBox" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                 Height="28" Margin="0,0,0,10"/>
        
        <!-- Description -->
        <Label Grid.Row="2" Content="Description (optional):" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" x:Name="DescriptionTextBox" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                 Height="28" Margin="0,0,0,10"/>
        
        <!-- Executable Path -->
        <Label Grid.Row="4" Content="Executable Path:" FontWeight="Bold" Margin="0,0,0,5"/>
        <Grid Grid.Row="5" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="ExecutablePathTextBox" Grid.Column="0"
                     Text="{Binding ExecutablePath, UpdateSourceTrigger=PropertyChanged}" 
                     Height="28" Margin="0,0,5,0"/>
            <Button Grid.Column="1" 
                    Content="Browse..." 
                    Style="{StaticResource InfoButton}"
                    Click="BrowseExecutable_Click" 
                    Width="90" Height="32"/>
        </Grid>
        
        <!-- Command Line Arguments -->
        <Label Grid.Row="6" Content="Command Line Arguments (optional):" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="7" x:Name="ArgumentsTextBox" Text="{Binding Arguments, UpdateSourceTrigger=PropertyChanged}" 
                 Height="28" Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource SecondaryButton}"
                    Height="30"
                    Width="80" 
                    Margin="0,0,10,0" 
                    Click="Cancel_Click" 
                    IsCancel="True"/>
            <Button Content="OK" 
                    Style="{StaticResource SuccessButton}"
                    Height="30"
                    Width="80" 
                    Click="OK_Click" 
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>