<Window x:Class="FFXIManager.Views.HotkeyEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:FFXIManager.Controls"
        Title="Edit Keyboard Shortcut" Height="410" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="{Binding SlotDisplayText, StringFormat='Configure hotkey for {0}'}" 
                       FontSize="14" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Text="Click the ðŸ“¹ Record button below, then press your desired key combination." 
                       FontSize="11" 
                       Margin="0,5,0,0"
                       Style="{StaticResource SecondaryTextBlock}"/>
            <TextBlock Text="ðŸ’¡ Tip: Use modifier keys (Ctrl, Alt, Shift, Win) to avoid conflicts with FFXI." 
                       FontSize="10" 
                       Margin="0,3,0,0"
                       FontStyle="Italic"
                       Foreground="{DynamicResource SecondaryTextBrush}"/>
        </StackPanel>
        
        <!-- Key Recorder -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="15">
            <controls:KeyRecorderControl x:Name="KeyRecorder" 
                                         ShortcutRecorded="KeyRecorder_ShortcutRecorded"/>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Apply" 
                    Width="80" 
                    Height="35" 
                    Margin="0,0,10,0" 
                    IsDefault="True"
                    Click="Apply_Click"
                    Style="{StaticResource PrimaryButton}"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="35" 
                    IsCancel="True"
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
