<UserControl x:Class="FFXIManager.Views.EmbeddedCharacterMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:FFXIManager.ViewModels.CharacterMonitor"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:EmbeddedCharacterMonitorViewModel}">
    
    <UserControl.Resources>
        <!-- Activate Button Style -->
        <Style x:Key="ActivateButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryIconButton}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLastActivated}" Value="True">
                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                    <Setter Property="ToolTip" Value="Active Character"/>
                    <Setter Property="Opacity" Value="0.9"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <GroupBox Header="ðŸŽ® Character Monitor">
        <StackPanel>
            <!-- Monitor Status -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“Š " FontSize="14" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                    <TextBlock Text="{Binding MonitoringStatus}" 
                               FontWeight="SemiBold" VerticalAlignment="Center" FontSize="13" FontFamily="Segoe UI"/>
                    <TextBlock Text=" | " Margin="8,0" VerticalAlignment="Center" Style="{StaticResource SecondaryTextBlock}"/>
                    <TextBlock Text="{Binding CharacterCount}" 
                               FontWeight="SemiBold" VerticalAlignment="Center" FontSize="13" FontFamily="Segoe UI"/>
                    <TextBlock Text=" character(s)" VerticalAlignment="Center" FontSize="13" FontFamily="Segoe UI" Style="{StaticResource SecondaryTextBlock}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ”„" 
                            Style="{StaticResource SuccessIconButton}"
                            Command="{Binding RefreshCharactersCommand}"
                            ToolTip="Refresh Characters"/>
                    <Button Content="ðŸ“±" 
                            Style="{StaticResource InfoIconButton}"
                            Command="{Binding ShowCharacterMonitorCommand}"
                            ToolTip="Open Character Monitor Window"/>
                </StackPanel>
            </Grid>

            <!-- Character List -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Characters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:CharacterItemViewModel}">
                            <Border>
                                <Border.Style>
                                    <Style TargetType="Border" BasedOn="{StaticResource HoverCardBorder}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLastActivated}" Value="True">
                                                <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Opacity" Value="0.95"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Status Indicator -->
                                    <Ellipse Grid.Column="0" Width="12" Height="12" Margin="0,0,12,0"
                                             VerticalAlignment="Center"
                                             Fill="{Binding StatusBrush}"/>
                                    
                                    <!-- Character Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   FontWeight="SemiBold" FontSize="13" FontFamily="Segoe UI"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding StatusText}" 
                                                       FontSize="11" FontFamily="Segoe UI" Style="{StaticResource SecondaryTextBlock}"/>
                                            <TextBlock Text=" | PID: " FontSize="11" FontFamily="Segoe UI" Style="{StaticResource SecondaryTextBlock}"/>
                                            <TextBlock Text="{Binding ProcessId}" 
                                                       FontSize="11" FontFamily="Segoe UI" Style="{StaticResource SecondaryTextBlock}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Controls: Activate + Reorder -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="ðŸŽ¯"
                                                Style="{StaticResource ActivateButtonStyle}"
                                                Command="{Binding ActivateCommand}"
                                                ToolTip="Activate Character Window"/>
                                        <Button Content="â¬†" Width="28" Height="28" Margin="6,0,0,0"
                                                Style="{StaticResource SecondaryIconButton}"
                                                Command="{Binding DataContext.MoveCharacterUpCommand, 
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding CanMoveUp}"
                                                ToolTip="Move Up"/>
                                        <Button Content="â¬‡" Width="28" Height="28" Margin="4,0,0,0"
                                                Style="{StaticResource SecondaryIconButton}"
                                                Command="{Binding DataContext.MoveCharacterDownCommand, 
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding CanMoveDown}"
                                                ToolTip="Move Down"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- No Characters Message -->
            <Border BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="24" 
                    Background="{DynamicResource SurfaceBrush}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CharacterCount}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="No PlayOnline characters detected. Launch FFXI to see character instances here."
                           HorizontalAlignment="Center"
                           FontStyle="Italic"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Style="{StaticResource SecondaryTextBlock}"/>
            </Border>
        </StackPanel>
    </GroupBox>
</UserControl>