<UserControl x:Class="FFXIManager.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#2C3E50" Padding="10">
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="FFXI Manager" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <Border Background="#34495E" 
                        CornerRadius="15" 
                        Margin="15,0,0,0" 
                        Padding="10,6"
                        VerticalAlignment="Center"
                        BorderBrush="#5D6D7E"
                        BorderThickness="1"
                        x:Name="HelpBorder"
                        ToolTipService.InitialShowDelay="150"
                        ToolTipService.ShowDuration="15000"
                        ToolTipService.BetweenShowDelay="50">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3F5771"/>
                                    <Setter Property="BorderBrush" Value="#85929E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Border.ToolTip>
                        <ToolTip MaxWidth="450" 
                                 Background="#F8F9FA" 
                                 BorderBrush="#DEE2E6" 
                                 BorderThickness="1">
                            <StackPanel Margin="5">
                                <TextBlock Text="Usage Tips" FontWeight="Bold" FontSize="14" Margin="0,0,0,8" Foreground="#495057"/>
                                <TextBlock Text="- Double-click any profile to swap to it instantly" 
                                           TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                <TextBlock Text="- Right-click profiles for context menu with all actions" 
                                           TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                <TextBlock Text="- Use inline buttons for direct actions" 
                                           TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                <TextBlock Text="- Rename auto-backups (backup_*) to convert to user profiles" 
                                           TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                <TextBlock Text="- Green highlight shows the currently active profile" 
                                           TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                <TextBlock Text="- login_w.bin is read-only (shows current state)" 
                                           TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                <TextBlock Text="- [EXT] indicates file was changed outside the app" 
                                           TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                <TextBlock Text="- Toggle 'Show auto-backups' to see/hide automatic backups" 
                                           TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                <TextBlock Text="- Expand 'Advanced' for maintenance tools" 
                                           TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                            </StackPanel>
                        </ToolTip>
                    </Border.ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="?" FontSize="16" FontWeight="Bold" Foreground="#3498DB" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Manage your PlayOnline Multi-Box Experience" FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>