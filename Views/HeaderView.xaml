<UserControl x:Class="FFXIManager.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border Background="{DynamicResource HeaderBackgroundBrush}" Padding="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: minimal icon and current section title -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <Ellipse Width="18" Height="18" Fill="{DynamicResource AccentBrush}"/>
                <TextBlock Text="{Binding CurrentSectionTitle}" FontSize="14" Margin="8,0,0,0" 
                           Foreground="White"/>
            </StackPanel>

            <!-- Center: optional global search placeholder -->
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <TextBox MinWidth="220" Height="26" Margin="8,0" VerticalAlignment="Center"
                         x:Name="GlobalSearchBox"
                         ToolTip="Search (Ctrl+K)"
                         Text=""
                         Visibility="Collapsed"/>
            </Grid>

            <!-- Right: status chips and actions -->
            	<StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                <Border CornerRadius="12" Background="{DynamicResource PillBackgroundBrush}" Padding="8,4" Margin="0,0,6,0" Height="30">
                    	<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Chars: " Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="{Binding RunningCharacters, FallbackValue=0}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                	</Border>
                	<Border CornerRadius="12" Background="{DynamicResource PillBackgroundBrush}" Padding="8,4" Margin="0,0,6,0" Height="30">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Apps: " Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="{Binding RunningApps, FallbackValue=0}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                	</Border>
                	<ToggleButton Content="Monitor"
                                IsChecked="{Binding MonitoringActive, Mode=TwoWay}"
                                Style="{StaticResource ModernToggleButton}"
                                MinWidth="84" Height="26" Margin="0,0,6,0"/>
                	<Button Content="Theme"
                        Command="{Binding ToggleThemeCommand}"
                        Style="{StaticResource SecondaryButton}"
                        MinWidth="64" Height="26" Margin="0,0,6,0"/>
                	<Button Content="Settings"
                        Command="{Binding OpenSettingsCommand}"
                        Style="{StaticResource PrimaryButton}"
                        MinWidth="84" Height="26"/>
            	</StackPanel>
        </Grid>
    </Border>
</UserControl>
