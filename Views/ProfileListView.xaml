<UserControl x:Class="FFXIManager.Views.ProfileListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:FFXIManager.Converters">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:ProfileStatusConverter x:Key="ProfileStatusConverter"/>
    </UserControl.Resources>
    
    <GroupBox Header="Backup Profiles">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Directory Settings -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
                <Label Content="PlayOnline Directory:"/>
                <DockPanel>
                    <Button DockPanel.Dock="Right" 
                            Content="Browse..." 
                            Style="{StaticResource InfoButton}"
                            Command="{Binding ChangeDirectoryCommand}" 
                            Width="90"/>
                    <TextBox Text="{Binding PlayOnlineDirectory}" IsReadOnly="True" Background="#F5F5F5"/>
                </DockPanel>
                
                <DockPanel>
                    <CheckBox DockPanel.Dock="Right" 
                              Content="Show auto-backups" 
                              IsChecked="{Binding ShowAutoBackups}"
                              VerticalAlignment="Center"
                              Margin="5,0,0,0"/>
                    <Button Content="Refresh" 
                            Style="{StaticResource SuccessButton}"
                            Command="{Binding RefreshCommand}" 
                            HorizontalAlignment="Left"/>
                </DockPanel>
            </StackPanel>
            
            <!-- Profiles DataGrid -->
            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Profiles}" 
                      SelectedItem="{Binding SelectedProfile}"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#F9F9F9"
                      MouseDoubleClick="DataGrid_MouseDoubleClick">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="ðŸ”„ Swap to This Profile"
                                  Command="{Binding SwapProfileCommand}"
                                  FontWeight="Bold"/>
                        <Separator/>
                        <MenuItem Header="âœï¸ Rename Profile" 
                                  Command="{Binding RenameProfileCommand}"/>
                        <MenuItem Header="ðŸ—‘ï¸ Delete Profile" 
                                  Command="{Binding DeleteProfileCommand}"/>
                        <Separator/>
                        <MenuItem Header="ðŸ“‹ Copy Profile Name" 
                                  Command="{Binding CopyProfileNameCommand}"/>
                        <MenuItem Header="ðŸ“ Open File Location"
                                  Command="{Binding OpenFileLocationCommand}"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <!-- Highlight currently active profile more prominently -->
                            <DataTrigger Binding="{Binding IsCurrentlyActive, Mode=OneWay}" Value="True">
                                <Setter Property="Background" Value="#C8E6C9"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                            <!-- Highlight user's last choice -->
                            <DataTrigger Binding="{Binding IsLastUserChoice, Mode=OneWay}" Value="True">
                                <Setter Property="Background" Value="#E8F5E8"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderBrush" Value="DarkGreen"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Profile Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="File Size" Binding="{Binding FileSizeFormatted, Mode=OneWay}" Width="80"/>
                    <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="130"/>
                    <DataGridTemplateColumn Header="Status" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock FontWeight="{Binding IsCurrentlyActive, Mode=OneWay, Converter={StaticResource BoolToFontWeightConverter}}"
                                           Foreground="{Binding IsCurrentlyActive, Mode=OneWay, ConverterParameter=Status, Converter={StaticResource BoolToColorConverter}}">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource ProfileStatusConverter}">
                                            <Binding Path="IsSystemFile" Mode="OneWay"/>
                                            <Binding Path="IsLastUserChoice" Mode="OneWay"/>
                                            <Binding Path="IsCurrentlyActive" Mode="OneWay"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                            Visibility="{Binding IsSystemFile, Mode=OneWay, Converter={StaticResource InverseBoolToVisConverter}}">
                                    <!-- All action buttons hidden for system files -->
                                    <Button Content="ðŸ”„" 
                                            Style="{StaticResource PrimaryIconButton}"
                                            Command="{Binding DataContext.SwapProfileParameterCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Swap to this profile"
                                            Margin="1"/>
                                    <Button Content="âœï¸" 
                                            Style="{StaticResource WarningIconButton}"
                                            Command="{Binding DataContext.RenameProfileParameterCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Rename this profile"
                                            Margin="1"/>
                                    <Button Content="ðŸ—‘ï¸" 
                                            Style="{StaticResource DangerIconButton}"
                                            Command="{Binding DataContext.DeleteProfileParameterCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Delete this profile"
                                            Margin="1"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!-- Add Profile Button moved below DataGrid -->
            <Button Grid.Row="2"
                    Content="âž• Add Profile" 
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ShowAddProfileDialogCommand}"
                    Margin="10,10,0,0" 
                    Width="140" 
                    HorizontalAlignment="Left"/>
        </Grid>
    </GroupBox>
</UserControl>