<UserControl x:Class="FFXIManager.Views.ProfileListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:FFXIManager.Converters">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:ProfileStatusConverter x:Key="ProfileStatusConverter"/>
    </UserControl.Resources>
    
    <GroupBox Header="Backup Profiles">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Directory Settings -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
                <Label Content="PlayOnline Directory:"/>
                <DockPanel>
                    <Button DockPanel.Dock="Right" 
                            Content="Browse..." 
                            Style="{StaticResource InfoButton}"
                            Command="{Binding ChangeDirectoryCommand}" 
                            Width="90"/>
                    <TextBox Text="{Binding PlayOnlineDirectory}" IsReadOnly="True"/>
                </DockPanel>
                
                <DockPanel>
                    <CheckBox DockPanel.Dock="Right" 
                              Content="Show auto-backups" 
                              IsChecked="{Binding ShowAutoBackups}"
                              VerticalAlignment="Center"
                              Margin="5,0,0,0"/>
                    <Button Content="Refresh" 
                            Style="{StaticResource SuccessButton}"
                            Command="{Binding RefreshCommand}" 
                            HorizontalAlignment="Left"/>
                </DockPanel>
            </StackPanel>
            
            <!-- Profiles DataGrid -->
            <DataGrid Grid.Row="1" 
                      Style="{StaticResource DataGridBase}"
                      ItemsSource="{Binding Profiles}" 
                      SelectedItem="{Binding SelectedProfile}"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      MouseDoubleClick="DataGrid_MouseDoubleClick">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="🔄 Swap to This Profile"
                                  Command="{Binding SwapProfileCommand}"
                                  FontWeight="Bold"/>
                        <Separator/>
                        <MenuItem Header="✏️ Rename Profile" 
                                  Command="{Binding RenameProfileCommand}"/>
                        <MenuItem Header="🗑️ Delete Profile" 
                                  Command="{Binding DeleteProfileCommand}"/>
                        <Separator/>
                        <MenuItem Header="📋 Copy Profile Name" 
                                  Command="{Binding CopyProfileNameCommand}"/>
                        <MenuItem Header="📁 Open File Location"
                                  Command="{Binding OpenFileLocationCommand}"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{DynamicResource HeaderBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource DividerBrush}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                            <ContentPresenter.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </ContentPresenter.Resources>
                                        </ContentPresenter>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Profile Name" Binding="{Binding Name}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="File Size" Binding="{Binding FileSizeFormatted, Mode=OneWay}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="130">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Status" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock FontWeight="{Binding IsCurrentlyActive, Mode=OneWay, Converter={StaticResource BoolToFontWeightConverter}}"
                                           Foreground="{Binding IsCurrentlyActive, Mode=OneWay, ConverterParameter=Status, Converter={StaticResource BoolToColorConverter}}">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource ProfileStatusConverter}">
                                            <Binding Path="IsSystemFile" Mode="OneWay"/>
                                            <Binding Path="IsLastUserChoice" Mode="OneWay"/>
                                            <Binding Path="IsCurrentlyActive" Mode="OneWay"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                            Visibility="{Binding IsSystemFile, Mode=OneWay, Converter={StaticResource InverseBoolToVisConverter}}">
                                    <!-- All action buttons hidden for system files -->
                                    <Button Content="🔄" 
                                            Style="{StaticResource PrimaryIconButton}"
                                            Command="{Binding DataContext.SwapProfileParameterCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Swap to this profile"
                                            Margin="1"/>
                                    <Button Content="✏️" 
                                            Style="{StaticResource WarningIconButton}"
                                            Command="{Binding DataContext.RenameProfileParameterCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Rename this profile"
                                            Margin="1"/>
                                    <Button Content="🗑️" 
                                            Style="{StaticResource DangerIconButton}"
                                            Command="{Binding DataContext.DeleteProfileParameterCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Delete this profile"
                                            Margin="1"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!-- Add Profile Button moved below DataGrid -->
            <Button Grid.Row="2"
                    Content="➕ Add Profile" 
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ShowAddProfileDialogCommand}"
                    Margin="10,10,0,0" 
                    Width="140" 
                    HorizontalAlignment="Left"/>
        </Grid>
    </GroupBox>
</UserControl>