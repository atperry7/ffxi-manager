<Window x:Class="FFXIManager.Views.DiscoverySettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:FFXIManager.Controls"
        Title="Advanced Settings" Height="500" Width="660"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,10">
                <!-- Character Keyboard Shortcuts Section -->
                <GroupBox Header="Character Keyboard Shortcuts" BorderBrush="{DynamicResource BorderBrush}" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10">
                    <StackPanel Margin="8">
                        <TextBlock Text="Configure global hotkeys to switch between FFXI character windows." 
                                   FontSize="11" Margin="0,0,0,10" 
                                   Style="{StaticResource SecondaryTextBlock}"/>
                        
                        <CheckBox x:Name="EnableHotkeysCheckBox"
                                  Content="Enable global keyboard shortcuts" 
                                  IsChecked="{Binding EnableHotkeys, Mode=TwoWay}" 
                                  Foreground="{DynamicResource PrimaryTextBrush}" 
                                  Margin="0,0,0,10"/>
                        
                        <!-- Hotkey Configuration Panel -->
                        <Border Background="{DynamicResource SurfaceBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Padding="8" 
                                IsEnabled="{Binding IsChecked, ElementName=EnableHotkeysCheckBox}">
                            <StackPanel>
                                <TextBlock Text="Character Slot Hotkeys:" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource PrimaryTextBrush}" 
                                           Margin="0,0,0,8"/>
                                
                                <!-- Hotkey List -->
                                <ItemsControl x:Name="HotkeysItemsControl" ItemsSource="{Binding CharacterHotkeys}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource CardBackgroundBrush}" 
                                                    BorderBrush="{DynamicResource BorderBrush}" 
                                                    BorderThickness="1" 
                                                    CornerRadius="2" 
                                                    Margin="0,0,0,4" 
                                                    Padding="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding SlotDisplayText}" 
                                                               FontWeight="Bold" 
                                                               VerticalAlignment="Center" 
                                                               Margin="0,0,10,0" 
                                                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                    
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding DisplayText}" 
                                                               VerticalAlignment="Center" 
                                                               Foreground="{DynamicResource AccentBrush}" 
                                                               FontFamily="Consolas"/>
                                                    
                                                    <Button Grid.Column="2" 
                                                            Content="Edit" 
                                                            Style="{StaticResource InfoIconButton}" 
                                                            Width="50" 
                                                            Height="25" 
                                                            Margin="5,0,5,0"
                                                            Command="{Binding DataContext.EditHotkeyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"/>
                                                    
                                                    <CheckBox Grid.Column="3" 
                                                              Content="Enabled" 
                                                              IsChecked="{Binding IsEnabled, Mode=TwoWay}" 
                                                              VerticalAlignment="Center" 
                                                              Foreground="{DynamicResource PrimaryTextBrush}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Cycle Hotkey Section -->
                                <TextBlock Text="Cycle Hotkey:" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource PrimaryTextBrush}" 
                                           Margin="0,12,0,8"/>
                                
                                <Border Background="{DynamicResource CardBackgroundBrush}" 
                                        BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="2" 
                                        Margin="0,0,0,8" 
                                        Padding="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="Cycle Characters" 
                                                   FontWeight="Bold" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,10,0" 
                                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding CycleHotkey.DisplayText}" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="{DynamicResource AccentBrush}" 
                                                   FontFamily="Consolas"/>
                                        
                                        <Button Grid.Column="2" 
                                                Content="Edit" 
                                                Style="{StaticResource InfoIconButton}" 
                                                Width="50" 
                                                Height="25" 
                                                Margin="5,0,5,0"
                                                Command="{Binding EditHotkeyCommand}"
                                                CommandParameter="{Binding CycleHotkey}"/>
                                        
                                        <CheckBox Grid.Column="3" 
                                                  Content="Enabled" 
                                                  IsChecked="{Binding CycleHotkey.IsEnabled, Mode=TwoWay}" 
                                                  VerticalAlignment="Center" 
                                                  Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </Grid>
                                </Border>
                                
                                <TextBlock Text="The cycle hotkey lets you quickly switch between all active characters in sequence." 
                                           FontSize="10" 
                                           Margin="0,0,0,8" 
                                           Style="{StaticResource SecondaryTextBlock}"/>
                                
                                <!-- Hotkey Performance Settings -->
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,8">
                                    <TextBlock Text="Hotkey debounce interval:" 
                                               VerticalAlignment="Center" 
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               Margin="0,0,8,0"/>
                                    <TextBox Text="{Binding HotkeyDebounceIntervalMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="60" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,4,0"/>
                                    <TextBlock Text="ms" 
                                               VerticalAlignment="Center" 
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="(Lower = more responsive, higher = less sensitive)" 
                                               VerticalAlignment="Center" 
                                               FontSize="10" 
                                               Style="{StaticResource SecondaryTextBlock}"/>
                                </StackPanel>
                                
                                <TextBlock Text="Hotkeys work globally and will switch FFXI character windows even when other applications have focus." 
                                           FontSize="10" 
                                           Margin="0,0,0,0" 
                                           Style="{StaticResource SecondaryTextBlock}"/>
                                <TextBlock Text="Gaming tip: 5ms = ultra-responsive (recommended), 10-25ms = balanced, 50ms+ = conservative." 
                                           FontSize="10" 
                                           Margin="0,4,0,0" 
                                           Style="{StaticResource SecondaryTextBlock}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>
                
                <!-- Diagnostics Section -->
                <GroupBox Header="Diagnostics" BorderBrush="{DynamicResource BorderBrush}" Foreground="{DynamicResource PrimaryTextBrush}">
                    <StackPanel Margin="8">
                        <CheckBox Content="Enable diagnostics (capture info)" IsChecked="{Binding EnableDiagnostics, Mode=TwoWay}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <CheckBox Content="Verbose logging (include debug)" IsChecked="{Binding VerboseLogging, Mode=TwoWay}" Margin="0,6,0,0" Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Max log entries:" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <TextBox Text="{Binding MaxLogEntries, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80" Margin="8,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="When diagnostics is off, only warnings and errors are kept." FontSize="11" Margin="0,6,0,0" Style="{StaticResource SecondaryTextBlock}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="90" Height="40" Margin="0,0,8,0" IsDefault="True" Command="{Binding SaveCommand}" Click="Save_Click" Style="{StaticResource PrimaryButton}"/>
            <Button Content="Cancel" Width="90" Height="40" IsCancel="True" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
