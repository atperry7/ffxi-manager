<UserControl x:Class="FFXIManager.Views.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#34495E" Padding="10">
        <DockPanel>
            <TextBlock Text="Status: " Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="{Binding StatusMessage}" Foreground="LightGray"/>
        </DockPanel>
    </Border>
</UserControl>