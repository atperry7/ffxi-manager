<UserControl x:Class="FFXIManager.Views.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    
    <Border Background="#2C3E50" Padding="6">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Loading Indicator -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                        Margin="0,0,10,0">
                <!-- Animated Loading Spinner -->
                <Border Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" 
                             Stroke="#3DAEE9" 
                             StrokeThickness="2" 
                             StrokeDashArray="4,2" 
                             StrokeDashOffset="0">
                        <Ellipse.RenderTransform>
                            <RotateTransform CenterX="5" CenterY="5"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="RenderTransform.Angle"
                                            From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Border>
            </StackPanel>
            
            <!-- Status Message -->
            <DockPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="#C9D1D9" 
                           VerticalAlignment="Center"
                           FontSize="11"
                           TextTrimming="CharacterEllipsis"/>
            </DockPanel>
            
            <!-- Backup Info -->
            <Border Grid.Column="2" BorderBrush="#4B5563" BorderThickness="1,0,0,0" 
                    Padding="10,0,10,0" Margin="10,0,0,0">
                <TextBlock Text="{Binding BackupInfo}" 
                           Foreground="#9CA3AF" 
                           FontSize="11"
                           VerticalAlignment="Center"/>
            </Border>
            
            <!-- Disk Space -->
            <Border Grid.Column="3" BorderBrush="#4B5563" BorderThickness="1,0,0,0" 
                    Padding="10,0,10,0">
                <TextBlock Text="{Binding DiskSpaceInfo}" 
                           Foreground="#9CA3AF" 
                           FontSize="11"
                           VerticalAlignment="Center"/>
            </Border>
            
            <!-- Last Refresh Time -->
            <Border Grid.Column="4" BorderBrush="#4B5563" BorderThickness="1,0,0,0" 
                    Padding="10,0,6,0">
                <TextBlock Text="{Binding LastRefreshTime}" 
                           Foreground="#6B7280" 
                           FontSize="10"
                           FontStyle="Italic"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
