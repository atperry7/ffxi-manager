<Window x:Class="FFXIManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIManager"
        xmlns:views="clr-namespace:FFXIManager.Views"
        xmlns:converters="clr-namespace:FFXIManager.Converters"
        mc:Ignorable="d"
        Title="{Binding ApplicationTitle}" Height="700" Width="1200" MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,5,5,0"/>
        </Style>
        
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <views:HeaderView Grid.Row="0" DataContext="{Binding}"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Profiles List -->
            <views:ProfileListView Grid.Column="0" Margin="0,0,5,0" DataContext="{Binding}"/>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>
            
            <!-- Actions Panel -->
            <views:ProfileActionsView Grid.Column="2" Margin="5,0,0,0" DataContext="{Binding}"/>
        </Grid>
        
        <!-- Status Bar -->
        <views:StatusBarView Grid.Row="2" DataContext="{Binding}"/>
    </Grid>
</Window>
