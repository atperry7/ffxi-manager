<Window x:Class="FFXIManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIManager"
        xmlns:converters="clr-namespace:FFXIManager.Converters"
        mc:Ignorable="d"
        Title="FFXI Manager - Login Profile Swapper" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,5,5,0"/>
        </Style>
        
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:BoolToActiveConverter x:Key="BoolToActiveConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <StackPanel>
                <TextBlock Text="FFXI Manager" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Manage your PlayOnline login profiles" FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Profiles List -->
            <GroupBox Grid.Column="0" Header="Available Profiles" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Directory Settings -->
                    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
                        <Label Content="PlayOnline Directory:"/>
                        <DockPanel>
                            <Button DockPanel.Dock="Right" Content="Browse..." Command="{Binding ChangeDirectoryCommand}" Width="80"/>
                            <TextBox Text="{Binding PlayOnlineDirectory}" IsReadOnly="True" Background="#F5F5F5"/>
                        </DockPanel>
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <!-- Profiles DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Profiles}" 
                              SelectedItem="{Binding SelectedProfile}"
                              AutoGenerateColumns="False"
                              SelectionMode="Single"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F9F9F9">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <!-- Highlight active login file differently -->
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="Background" Value="#E8F4F8"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Profile Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="File Size" Binding="{Binding FileSizeFormatted}" Width="80"/>
                            <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="130"/>
                            <DataGridTemplateColumn Header="Type" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToActiveConverter}}" 
                                                   FontWeight="{Binding IsActive, Converter={StaticResource BoolToFontWeightConverter}}"
                                                   Foreground="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>
            
            <!-- Actions Panel -->
            <GroupBox Grid.Column="2" Header="Actions" Margin="5,0,0,0">
                <StackPanel>
                    <!-- Profile Actions -->
                    <GroupBox Header="Profile Management">
                        <StackPanel>
                            <Button Content="Swap to Selected Profile" 
                                    Command="{Binding SwapProfileCommand}"
                                    Background="#3498DB"
                                    Foreground="White"
                                    FontWeight="Bold"/>
                            
                            <Button Content="Delete Selected Profile" 
                                    Command="{Binding DeleteProfileCommand}"
                                    Background="#E74C3C"
                                    Foreground="White"/>
                            
                            <Separator Margin="5"/>
                            
                            <!-- Create Backup Section -->
                            <Label Content="Create New Backup:"/>
                            <TextBox Text="{Binding NewBackupName, UpdateSourceTrigger=PropertyChanged}" 
                                     x:Name="BackupNameTextBox"/>
                            <Button Content="Create Backup from Active" 
                                    Command="{Binding CreateBackupCommand}"
                                    Background="#27AE60"
                                    Foreground="White"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Selected Profile Details -->
                    <GroupBox Header="Selected Profile Details">
                        <Grid>
                            <!-- Profile Details -->
                            <StackPanel DataContext="{Binding SelectedProfile}">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                
                                <TextBlock>
                                    <Run Text="Name: " FontWeight="Bold"/>
                                    <Run Text="{Binding Name}"/>
                                </TextBlock>
                                
                                <TextBlock>
                                    <Run Text="File Size: " FontWeight="Bold"/>
                                    <Run Text="{Binding FileSizeFormatted}"/>
                                </TextBlock>
                                
                                <TextBlock>
                                    <Run Text="Last Modified: " FontWeight="Bold"/>
                                    <Run Text="{Binding LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                                </TextBlock>
                                
                                <TextBlock>
                                    <Run Text="Type: " FontWeight="Bold"/>
                                    <Run Text="{Binding IsActive, Converter={StaticResource BoolToActiveConverter}}"/>
                                </TextBlock>
                                
                                <TextBlock Text="{Binding Description}" 
                                           TextWrapping="Wrap" 
                                           FontSize="11" 
                                           Foreground="DarkBlue" 
                                           Margin="0,5,0,5"/>
                                
                                <!-- Warning for active file -->
                                <Border Background="#FFF3CD" 
                                        BorderBrush="#FFEAA7" 
                                        BorderThickness="1" 
                                        Padding="8" 
                                        Margin="0,5,0,5"
                                        Visibility="{Binding IsActive, Converter={StaticResource BoolToVisConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="⚠️ Active Login File" 
                                                   FontWeight="Bold" 
                                                   Foreground="#856404"/>
                                        <TextBlock Text="This file is currently used by PlayOnline. It cannot be deleted or swapped. Create backups from this file instead." 
                                                   TextWrapping="Wrap" 
                                                   FontSize="10" 
                                                   Foreground="#856404" 
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <TextBlock Text="{Binding FilePath}" 
                                           TextWrapping="Wrap" 
                                           FontSize="10" 
                                           Foreground="Gray" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- No Selection Message -->
                            <TextBlock Text="No profile selected" 
                                       FontStyle="Italic" 
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="10">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedProfile}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Help Section -->
                    <GroupBox Header="Quick Help" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Usage Tips:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="• login_w.bin is shown for info but cannot be modified" 
                                       TextWrapping="Wrap" Margin="0,2"/>
                            <TextBlock Text="• Create backups before swapping profiles" 
                                       TextWrapping="Wrap" Margin="0,2"/>
                            <TextBlock Text="• Each profile contains 4 account slots" 
                                       TextWrapping="Wrap" Margin="0,2"/>
                            <TextBlock Text="• System files (inet_w.bin, noramim.bin) are excluded" 
                                       TextWrapping="Wrap" Margin="0,2"/>
                            <TextBlock Text="• Auto-backups are created and cleaned up automatically" 
                                       TextWrapping="Wrap" Margin="0,2"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- Loading Indicator -->
        <Border Grid.Row="2" Background="LightYellow" Padding="10" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="⏳" FontSize="16" Margin="0,0,10,0"/>
                <TextBlock Text="Loading..." FontWeight="Bold"/>
            </StackPanel>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495E" Padding="10">
            <DockPanel>
                <TextBlock Text="Status: " Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="LightGray"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
