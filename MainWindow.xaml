<Window x:Class="FFXIManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIManager"
        xmlns:converters="clr-namespace:FFXIManager.Converters"
        mc:Ignorable="d"
        Title="FFXI - Multi-Box Manager" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,5,5,0"/>
        </Style>
        
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:BoolToActiveConverter x:Key="BoolToActiveConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToCurrentlyActiveConverter x:Key="BoolToCurrentlyActiveConverter"/>
        <converters:ProfileStatusConverter x:Key="ProfileStatusConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="FFXI Manager" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <Border Background="#34495E" 
                            CornerRadius="15" 
                            Margin="15,0,0,0" 
                            Padding="10,6"
                            VerticalAlignment="Center"
                            BorderBrush="#5D6D7E"
                            BorderThickness="1"
                            x:Name="HelpBorder"
                            ToolTipService.InitialShowDelay="150"
                            ToolTipService.ShowDuration="15000"
                            ToolTipService.BetweenShowDelay="50">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3F5771"/>
                                        <Setter Property="BorderBrush" Value="#85929E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.ToolTip>
                            <ToolTip MaxWidth="450" 
                                     Background="#F8F9FA" 
                                     BorderBrush="#DEE2E6" 
                                     BorderThickness="1">
                                <StackPanel Margin="5">
                                    <TextBlock Text="📋 Usage Tips" FontWeight="Bold" FontSize="14" Margin="0,0,0,8" Foreground="#495057"/>
                                    <TextBlock Text="• 'Active Profile' shows which backup is currently in use" 
                                               TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                    <TextBlock Text="• 'System File' shows the login_w.bin file (read-only)" 
                                               TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                    <TextBlock Text="• Green highlight shows the profile currently being used" 
                                               TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                    <TextBlock Text="• [EXT] shows when file was changed outside the app" 
                                               TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                    <TextBlock Text="• Auto-backups are hidden by default - toggle checkbox to show" 
                                               TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                    <TextBlock Text="• Expand 'Advanced' section for maintenance tools" 
                                               TextWrapping="Wrap" Margin="0,3" FontSize="12" Foreground="#212529"/>
                                </StackPanel>
                            </ToolTip>
                        </Border.ToolTip>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="?" FontSize="16" FontWeight="Bold" Foreground="#3498DB" Margin="0,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Manage your PlayOnline Multi-Box Experience" FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Profiles List -->
            <GroupBox Grid.Column="0" Header="Available Profiles" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Directory Settings -->
                    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
                        <Label Content="PlayOnline Directory:"/>
                        <DockPanel>
                            <Button DockPanel.Dock="Right" Content="Browse..." Command="{Binding ChangeDirectoryCommand}" Width="80"/>
                            <TextBox Text="{Binding PlayOnlineDirectory}" IsReadOnly="True" Background="#F5F5F5"/>
                        </DockPanel>
                        <DockPanel>
                            <CheckBox DockPanel.Dock="Right" 
                                      Content="Show auto-backups" 
                                      IsChecked="{Binding ShowAutoBackups}"
                                      VerticalAlignment="Center"
                                      Margin="5,0,0,0"/>
                            <Button Content="Refresh" Command="{Binding RefreshCommand}" HorizontalAlignment="Left"/>
                        </DockPanel>
                    </StackPanel>
                    
                    <!-- Profiles DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Profiles}" 
                              SelectedItem="{Binding SelectedProfile}"
                              AutoGenerateColumns="False"
                              SelectionMode="Single"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F9F9F9">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <!-- Highlight login_w.bin (system file) differently -->
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="Background" Value="#F0F8FF"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <!-- Highlight currently active backup profile more prominently -->
                                    <DataTrigger Binding="{Binding IsCurrentlyActive}" Value="True">
                                        <Setter Property="Background" Value="#E8F5E8"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="BorderBrush" Value="DarkGreen"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Profile Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="File Size" Binding="{Binding FileSizeFormatted, Mode=OneWay}" Width="80"/>
                            <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="130"/>
                            <DataGridTemplateColumn Header="Status" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="{Binding IsActive, Converter={StaticResource BoolToFontWeightConverter}}"
                                                   Foreground="{Binding IsCurrentlyActive, ConverterParameter=Status, Converter={StaticResource BoolToColorConverter}}">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource ProfileStatusConverter}">
                                                    <Binding Path="IsActive"/>
                                                    <Binding Path="IsCurrentlyActive"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>
            
            <!-- Actions Panel -->
            <GroupBox Grid.Column="2" Header="Actions" Margin="5,0,0,0">
                <StackPanel>
                    <!-- Profile Actions -->
                    <GroupBox Header="Profile Management">
                        <StackPanel>
                            <Button Content="Swap to Selected Profile" 
                                    Command="{Binding SwapProfileCommand}"
                                    Background="#3498DB"
                                    Foreground="White"
                                    FontWeight="Bold"/>
                            
                            <Button Content="Delete Selected Profile" 
                                    Command="{Binding DeleteProfileCommand}"
                                    Background="#E74C3C"
                                    Foreground="White"/>
                            
                            <Separator Margin="5"/>
                            
                            <!-- Create Backup Section -->
                            <Label Content="Create New Backup:"/>
                            <TextBox Text="{Binding NewBackupName, UpdateSourceTrigger=PropertyChanged}" 
                                     x:Name="BackupNameTextBox"/>
                            <Button Content="Create Backup from Active" 
                                    Command="{Binding CreateBackupCommand}"
                                    Background="#27AE60"
                                    Foreground="White"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Selected Profile Details -->
                    <GroupBox Header="Selected Profile Details">
                        <Grid>
                            <!-- Profile Details -->
                            <StackPanel DataContext="{Binding SelectedProfile}">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                
                                <TextBlock>
                                    <Run Text="Name: " FontWeight="Bold"/>
                                    <Run Text="{Binding Name}"/>
                                </TextBlock>
                                
                                <TextBlock>
                                    <Run Text="File Size: " FontWeight="Bold"/>
                                    <Run Text="{Binding FileSizeFormatted, Mode=OneWay}"/>
                                </TextBlock>
                                
                                <TextBlock>
                                    <Run Text="Last Modified: " FontWeight="Bold"/>
                                    <Run Text="{Binding LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                                </TextBlock>
                                
                                <TextBlock>
                                    <Run Text="Status: " FontWeight="Bold"/>
                                    <Run Foreground="{Binding IsCurrentlyActive, ConverterParameter=Status, Converter={StaticResource BoolToColorConverter}}">
                                        <Run.Text>
                                            <MultiBinding Converter="{StaticResource ProfileStatusConverter}">
                                                <Binding Path="IsActive"/>
                                                <Binding Path="IsCurrentlyActive"/>
                                            </MultiBinding>
                                        </Run.Text>
                                    </Run>
                                </TextBlock>
                                
                                <TextBlock Text="{Binding Description}" 
                                           TextWrapping="Wrap" 
                                           FontSize="11" 
                                           Foreground="DarkBlue" 
                                           Margin="0,5,0,5"/>
                                
                                <!-- Warning for active file -->
                                <Border Background="#FFF3CD" 
                                        BorderBrush="#FFEAA7" 
                                        BorderThickness="1" 
                                        Padding="8" 
                                        Margin="0,5,0,5"
                                        Visibility="{Binding IsActive, Converter={StaticResource BoolToVisConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="⚠ System Login File" 
                                                   FontWeight="Bold" 
                                                   Foreground="#856404"/>
                                        <TextBlock Text="This is the system file used by PlayOnline. It cannot be deleted or swapped. Create backups from this file instead." 
                                                   TextWrapping="Wrap" 
                                                   FontSize="10" 
                                                   Foreground="#856404" 
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <TextBlock Text="{Binding FilePath}" 
                                           TextWrapping="Wrap" 
                                           FontSize="10" 
                                           Foreground="Gray" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <!-- No Selection Message -->
                            <TextBlock Text="No profile selected" 
                                       FontStyle="Italic" 
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="10">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedProfile}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Advanced Options -->
                    <GroupBox Header="Advanced" Margin="0,10,0,0">
                        <Expander Header="Maintenance Tools" IsExpanded="False">
                            <StackPanel Margin="0,5,0,0">
                                <Button Content="Clean Up Auto-Backups" 
                                        Command="{Binding CleanupAutoBackupsCommand}"
                                        Background="#F39C12"
                                        Foreground="White"
                                        ToolTip="Remove old automatic backup files (keeps 5 most recent). Auto-backups are created automatically during profile swaps for safety."/>
                                <Button Content="Reset Active Tracking" 
                                        Command="{Binding ResetTrackingCommand}"
                                        Background="#9B59B6"
                                        Foreground="White"
                                        ToolTip="Clear active profile tracking and start fresh. Use this if the app incorrectly identifies which profile is active."
                                        ToolTipService.InitialShowDelay="150"
                                        ToolTipService.ShowDuration="8000"
                                        ToolTipService.BetweenShowDelay="50"/>
                            </StackPanel>
                        </Expander>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- Loading Indicator -->
        <Border Grid.Row="2" Background="LightYellow" Padding="10" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="⏳" FontSize="16" Margin="0,0,10,0"/>
                <TextBlock Text="Loading..." FontWeight="Bold"/>
            </StackPanel>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495E" Padding="10">
            <DockPanel>
                <TextBlock Text="Status: " Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="LightGray"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
